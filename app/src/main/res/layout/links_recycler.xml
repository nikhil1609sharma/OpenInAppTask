<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp"
    android:background="@drawable/rectangle_border"
    android:backgroundTint="@color/white"
    android:elevation="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:weightSum="3"
          android:orientation="horizontal">



          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@drawable/back"
              android:layout_margin="10dp">


              <ImageView
                  android:id="@+id/img"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_gravity="center"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="13dp"
              android:layout_weight="2.3"
              android:orientation="vertical">

              <TextView
                  android:id="@+id/txtTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/figtree"
                  android:singleLine="true"
                  android:text="Enrollment ID"
                  android:textSize="15sp"
                  android:textColor="@color/black"/>

              <TextView
                  android:id="@+id/txtDate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/figtree"
                  android:text="22 Aug 2022"
                  android:textSize="15sp"
                  android:textColor="#999CA0"/>




          </LinearLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="13dp"
              android:layout_weight="0.7"
              android:gravity="end"
              android:paddingEnd="10dp"
              android:paddingStart="0dp"
              android:orientation="vertical">

              <TextView
                  android:id="@+id/txtClicks"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/figtree"
                  android:text="223"
                  android:textSize="15sp"
                  android:textColor="@color/black"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/figtree"
                  android:text="Clicks"
                  android:textSize="15sp"
                  android:textColor="#999CA0"/>




          </LinearLayout>

      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/dotted_back">

            <TextView
                android:id="@+id/txtLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#0E6FFF"
                android:text="jgcdegwek"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_weight="1.9"
                android:fontFamily="@font/figtree">

            </TextView>

            <ImageView
                android:id="@+id/imgCopy"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                android:src="@drawable/copy"/>


        </LinearLayout>



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>